# i3status configuration file. see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        output_format = "i3bar"
        colors = true
        interval = 5
        color_good = "#a9a665"
        color_degraded = "#dfbf8e"
        color_bad = "#ea6962"
}

order += "cmus"
order += "volume master"
order += "i3block xmr_feed"
order += "cpu_usage"
order += "lm_sensors"
order += "clock"
order += "arch_updates"

# py3status
lm_sensors {
        format_chip = ' {format_sensor}'
        format_sensor = '[\?color=auto.input {input} 󰔄]'
        chips = ['k10temp-pci-00c3']
        sensors = ['tccd1']
}

cmus {
        format = "[\?if=is_started [\?if=is_playing  ][\?if=is_paused  ][\?if=is_stopped  ][[{artist}][\?soft  - ][{title}]]]"
        button_previous = 4
        button_next = 5
}

vpn_status {
        format_vpn = '󰖂 {name}'
}

clock {
        format = "{America/New_York}"
        format_time = "%Y-%m-%d %H:%M:%S"
}

cpu_usage {
        format = " %usage"

}

volume master {
        format = "󰕾 %volume"
        format_muted = "󰕿 %volume"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
        on_click 1 = "exec pamixer --toggle-mute"
        on_click 4 = "exec pamixer --increase 5"
        on_click 5 = "exec pamixer --decrease 5"
}

arch_updates {
        format = '󰣇 {total} '
}

i3block xmr_feed {
        command = "~/dev/apps/rust/xmr_feed/target/debug/xmr_feed"
        interval = 60
}






cpu_temperature 0 {
      format = "T: %degrees °C"
      path = "/sys/class/thermal/thermal_zone0/temp"
}

# man strftime
tztime date {
        #format = "%a. %d %b %Y"
        format = "%Y-%m-%d"
        align = "left"
        #min_width = 994
}

tztime time {
        format = "%H:%M"
        align = "left"
        #min_width = 994
}

path_exists VPN {
        # path exists when a VPN tunnel launched by nmcli/nm-applet is active
        path = "/proc/sys/net/ipv4/conf/wg-mullvad"
}

load {
        format = " load %1min "
        # max_threshold = 0.3
}

disk "/" {
        # format = " hdd %avail "
        format = " ⛁ %avail "
}

ethernet _first_ {
# if you use %speed, i3status requires root privileges
        #format_up = " lan: %ip %speed "
        format_up = " lan: %ip "
        format_down = " no lan "
}

battery all {
        # format = "%status %percentage %remaining %emptytime"
        format = " %status %percentage"
        format_down = "No battery"
        last_full_capacity = true
        integer_battery_capacity = true
        # status_chr = ""
        status_chr = "⚡"
        # status_bat = "bat"
        # status_bat = "☉"
        status_bat = ""
        # status_unk = "?"
        status_unk = ""
        # status_full = ""
        status_full = "☻"
        low_threshold = 15
        threshold_type = time
}

memory {
        format = " %used / %total "
        threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
}

