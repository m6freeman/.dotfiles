#!/bin/sh
alias ..='cd ..'
#alias btm='btm -flgnTa --process_command --default_widget_type=Temp --hide_time --hide_table_gap'
alias btm='btm -lgnTa --default_widget_type=Temp --hide_time --hide_table_gap'
alias cat='bat'
alias config='/usr/bin/git --git-dir=$HOME/.dotfiles --work-tree=$HOME'
alias cp='cp -iv'
alias df='df -H'                                                # Human-readable sizes
alias dn='dotnet'
alias find='fd'
alias free='free -m'                                            # Show sizes in MB
alias get-clipboard='xclip -selection c -o'
alias gitl='git log --all --graph --oneline --decorate'
alias i3restart='i3-msg restart'
alias ls.='eza -al --long --color=always --group-directories-first --header --git --tree --level 1'
alias ls='eza --long --group-directories-first --header --git --tree --level 1'
alias ls2='eza --long --group-directories-first --header --git --tree --level 2'
alias ls3='eza --long --group-directories-first --header --git --tree --level 3'
alias mkdir='mkdir -pv'
alias mv='mv -iv'
alias rg='rg -.'
alias rm='rm -Iv --preserve-root'
alias set-clipboard='xclip -selection c'
alias tutanota='/opt/tutanota/tutanota-desktop-linux.AppImage'
alias update='sudo pacman -Syyu'
alias ytdl='yt-dlp --extract-audio --audio-format mp3'
alias zource='clear && source ~/.config/zsh/.zshrc'
alias mon='mullvad connect && mullvad reconnect && mullvad lockdown-mode set on'
alias mof='mullvad disconnect && mullvad lockdown-mode set off'
alias firefox='firefox-developer-edition'
